{% extends 'base.html.twig' %}

{% block title %}Fictif 2024 - Panier{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-item-center pt-3">
    <h1>Votre panier {% if app.user %}{{ app.user.firstname }} {% endif %} !</h1>
</div>
<div class="container">
    <hr class="my-4">
</div>
<section id="cart-tickets">
    <div class="container d-flex mt-4">
        {# {% for ticket in tickets %} #}
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-lg-6">
                    <img src="{{ asset('assets/img/accueil1.jpg') }}" class="img-fluid rounded" alt="Event">
                </div>
                <div class="col-lg-6 container d-flex align-items-center justify-content-center">
                    <div class="card-body">
                        <h5 class="card-title text-center">Event - Offre</h5>
                        <div class="row">
                            <div class="d-flex">
                                <div class="col">
                                    <p class="card-text">
                                        <span>Date</span><br>
                                        <span>Lieu</span><br>
                                        <span>Début - Fin</span><br>
                                        <span>X places</span><br>
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text">
                                            <a href="#" class="btn btn-outline-primary">Supprimer</a>
                                        </p>
                                        <p class="card-text fs-3">100 €</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {# {% endfor %} #}
    </div>
</section>
<div class="container">
    <hr class="my-4">
</div>
<section id="cart-total">
    <div class="container d-flex justify-content-between">
        <h2>Total</h2>
        <h2>0 €</h2>
    </div>
    <div class="container d-flex justify-content-end my-4">
        <a href="#" class="btn btn-outline-primary fs-5">Valider & payer</a>
    </div>
</section>
{% endblock %}